  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "reactNamespace": "JSX",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}